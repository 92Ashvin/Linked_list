#include<stdio.h>
#include<stdlib.h>
struct node{
  int data;
  struct node*next;
};
struct node*head=NULL;
struct node*temp,*new_node;
void create(){
  new_node=(struct node*)malloc(sizeof(struct node));
  printf("Enter Data:");
  scanf("%d",&new_node->data);
  new_node->next=NULL;
  
  if(head==NULL)
  {
    head=new_node;
    temp=new_node;
  }
  else
  {
    temp->next=new_node;
    temp=new_node;
  }

}
void ins_node()
{
  struct node*ins_node;
  ins_node=(struct node*)malloc(sizeof(struct node));
  printf("Enter Data you want to insert:");
  scanf("%d",&ins_node->data);
  ins_node->next=head;
  head=ins_node;

}
void display()
{  
   struct node*dtemp=head;
  
  while(dtemp!=NULL){
  printf("%d\n",dtemp->data);
  dtemp=dtemp->next;
         }

}

int main()
{
  int ch;
  while(1){
    printf("Enter Your Choice");
    printf("\n1.Create\t2.Display\t3.Insert at beginnning\n");
    scanf("%d",&ch);
    switch(ch)
    {
      case 1:create();
      break;
      case 2:display();
      break;
      case 3:ins_node();
      break;
      case 4:exit(0);
      break;
      default:printf("Wrong choice");

    }
  }
}
